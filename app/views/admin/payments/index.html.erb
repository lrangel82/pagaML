<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Loan</th>
      <th>Amount</th>
      <th>Payment date</th>
      <th>Profit</th>
      <th>Payment to borrowed</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.loan.code %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.payment_date %></td>
        <td><%= payment.profit %></td>
        <td><%= payment.payment_to_borrowed %></td>
        <td><%= payment.status.name %></td>
        <td><%= link_to 'Show', admin_payment_path(payment) %></td>
        <td><%= link_to 'Edit', edit_admin_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', admin_payments_path(payment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

