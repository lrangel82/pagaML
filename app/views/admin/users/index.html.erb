<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>id</th>
      <th>email</th>
      <th>Name</th>
      <th>Last Name</th>
      <th>provider</th>
      <th>uid</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.provider %></td>
        <td><%= user.uid %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

